%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  %templates
  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  %title page
  \defbeamertemplate*{title page}{sidebar theme}{%
    \hfill%
    \begin{minipage}[t][\textheight][c]{\textwidth+\Gm@rmargin-\Gm@lmargin}
      \centering
      \vspace{3em}
      {\usebeamerfont{title}\usebeamercolor[bg]{title}\bf\LARGE\inserttitle}\vspace*{0.5\baselineskip}

      {\usebeamerfont{subtitle}\usebeamercolor[bg]{subtitle}\Large\insertsubtitle}\vspace*{1.5\baselineskip}

      {\usebeamerfont{institute}\usebeamercolor[bg]{institute}\normalsize\insertinstitute}\vspace*{\baselineskip}
      
      {\usebeamerfont{date}\usebeamercolor[bg]{date}\Large\insertdate}
      
      \vspace{7em}      
      
      {\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor}\vspace*{\baselineskip}
    \end{minipage}
  }
  
  %part page
  \AtBeginPart{\frame[plain]{\partpage}} %adds a plain part page as defined below
  \defbeamertemplate*{part page}{sidebar theme}{%
    \hfill%
    \begin{minipage}[c][\textheight][c]{\textwidth+\Gm@rmargin-\Gm@lmargin}
      \centering
      {\usebeamerfont{title}\usebeamercolor[fg]{author}{Part \Roman{part}}}\vspace*{\baselineskip}

      {\usebeamerfont{title}\usebeamercolor[fg]{title}{\insertpart}}
    \end{minipage}
  }

}%end of beamer specific options

\mode<all>
