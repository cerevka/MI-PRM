\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemeaausidebar}[2011/09/09 v0.3.1 An Unofficial AAU Beamer Theme]
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%theme options
\DeclareOptionBeamer{lightheaderbg}{\def\beamer@lightheaderbg{true}}
\ProcessOptionsBeamer

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \definecolor{beamer@barcolor}{rgb}{0.55,0.79,0.94}% light blue
  \definecolor{beamer@headercolor}{rgb}{0.00,0.41,0.66}% dark blue
  \setbeamercolor{structure}{fg=beamer@headercolor}
  \ifx\beamer@lightheaderbg\undefined% use a light, white header background
    \setbeamercolor{frametitle}{fg=white,bg=beamer@headercolor}
  \fi
  \setbeamercolor{aau sidebar}{fg=beamer@barcolor,bg=beamer@headercolor}
}%end of beamer specific options

\mode<all>
